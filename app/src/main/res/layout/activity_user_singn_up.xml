<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    tools:context=".Dashboard.userSingnUp">


    <LinearLayout
        android:id="@+id/update_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/add_user"
            app:civ_border_color="#FF000000" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E61E1D1D"
            app:cardCornerRadius="10dp"
            app:cardElevation="16dp">

            <EditText
                android:id="@+id/sigup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:hint="Username"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#FDFCFC"
                android:textColorHint="#A5A0A0"
                tools:ignore="InvalidId" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E61E1D1D"
            app:cardCornerRadius="10dp"
            app:cardElevation="16dp">

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#FBFBFB"
                android:textColorHint="#A5A0A0" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E61E1D1D"
            app:cardCornerRadius="10dp"
            app:cardElevation="16dp">

            <EditText
                android:id="@+id/signup_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:hint="Phone"
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#FBFBFB"
                android:textColorHint="#A5A0A0" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E61E1D1D"
            app:cardCornerRadius="10dp"
            app:cardElevation="16dp">

            <EditText
                android:id="@+id/signup_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#FDFCFC"
                android:textColorHint="#A5A0A0" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#E61E1D1D"
            app:cardCornerRadius="10dp"
            app:cardElevation="16dp">

            <EditText
                android:id="@+id/signup_cpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:fontFamily="@font/allerta"
                android:hint="Re-Enter password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="5dp"
                android:textColor="#FBFBFB"
                android:textColorHint="#A5A0A0" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#F1F4F4"
            app:cardCornerRadius="10dp"
            app:cardElevation="16dp">

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F3F1"
                android:fontFamily="@font/allerta"
                android:padding="5dp"
                android:text="SignUp"
                android:textColor="#0B0B0B"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#00C853"
            app:cardCornerRadius="10dp"
            app:cardElevation="16dp">

            <Button
                android:id="@+id/already_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E61E1D1D"
                android:fontFamily="@font/allerta"
                android:padding="5dp"
                android:text="Already registration / SignIn"
                android:textColor="#F8F5F5"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>